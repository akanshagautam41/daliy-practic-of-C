// reversed praymid program
#include<stdio.h>

int main()
{
	int size = 5,i,j,k;
	for( i=0; i<size;i++)
	{
		for(j=0; j<i;j++)
		{
			printf(" ");
		}
		for(k=0; k<(size-i)*2-1;k++)
		{
			printf("*");
		}
		printf("\n");
	}
	for(i=2;i<=size;i++)
	{
		for(j=size; j>i; j--)
		{
			printf(" ");
		}
		for(k=0;k<i*2-1;k++)
		{
			printf("*");
		}
		printf("\n");
	}
}

#include<stdio.h>
int main()
{
	int i,j,count,n;
	printf("Enter Any value:");
	scanf("%d",&n);
	
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=i;j++)
	
	{
		printf("%d\t",count);
		count++;
	}
	{
		printf("\n");
	}
	}
}

// pattern 

#include<stdio.h>

int main()
{
	int i,k,j;
	for(i=1;i<=5;i++)
	{
		for(k=1;k<=i;k++)
		{
			printf("");
		}
		for(j=1;j<=i;j++)
		{
			printf(" * ");
		
		}
		printf("\n");
	}
}

#include<stdio.h>
int main()
{
	int n=5;
	int i,j,k;
	for(i=0;i<n;i++)
	{
		for(k=1;k<n-i;k++)
		{
			printf(" ");
			
		}
		for(j=0;j<i;j++)
		{
			printf(" * ");
		}
		printf("\n");
	}
}

 // union program c - user defined datatype or derived

#include<stdio.h>

union emp{
	int id;
	float salary;
	char name[20];
}e1;

int main()
{
	e1.id= 96;
	printf("your id is : %d",e1.id);
	
	e1.salary= 30000;
	printf("\nyour salary is : %.2lf",e1.salary);
	
	strcpy(e1.name, "akansha");
	printf("\nyour name is : ekta",e1.name);
}

// copy string program
#include<stdio.h>

int main()
{
	
	char str1[]={"ekta"};
	char str2[]={"kathad"};
	char str3[20];
	
	strcpy(str3,str1);
	printf("%s",str3);
	strcpy(str3,str2);
	printf("%s",str3);
}

// concatstring program
#include<stdio.h>
int main()
{
	char str1[]={"ekta"};
	char str2[]={"kathad"};
	
	printf("%s",strcat(str1,str2));
}

// pointer program addition two value 

#include<stdio.h>

int main()
{
	int a,b,*p,*q,c;
	printf("enter the value:\n");
	scanf("%d",&a);
	printf("enter the value:\n");
	scanf("%d",&b);
	
	p= &a;
	q= &b;
	c= *p+*q;
	
	printf("sum of a and b is : %d",c);
}

// c pointer program 

#include<stdio.h>

int main()
{
	float a,*p;
	printf("Enter the value of a:");
	scanf("%f",&a);
	
	p = &a;
	printf("value of a is : %.2lf\n",*p);  //number
	printf("value of a is : %.2lf\n",p);  //address
	printf("value of a is : %.2lf\n",&a);  //address
	printf("value of a is : %.2lf\n",a);  //number
}

// swapping with pointer of any two variable

#include<stdio.h>
int main()
{
	int a=10,b=20,*p,*q,temp;
	printf("enter the value of a and b\n\n");
	p= &a;
	q= &b;
	
	temp=*p;
	*p=*q;
	*q=temp;
	
	printf("\nafter swappig the value of \na: %d and \nb:%d",*p,*q,*temp);
    return 0;
}

#include<stdio.h>
struct emp{
	int id;
	float salary;
	char name[20];
};

int main()
{
	struct emp e1,e2;
	
	e1.id= 30;
	printf("\n your id is : %d",e1.id);
	
	e1.salary=30000.00;
	printf("\n your salary is : %.2lf",e1.salary);
	
	strcpy(e1.name,"ekta");
	printf("\n your name is : %s \n",e1.name);
	
	e2.id=25;
	printf("\n your id is : %d",e2.id);
	
	e2.salary=40000.00;
	printf(" \n your salary is : %.2lf",e2.salary);
	
	strcpy(e2.name,"rani");
	printf(" \n your name is : %s  ",e2.name);
	
	}	
	
